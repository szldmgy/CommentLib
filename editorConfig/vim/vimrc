" OS X
" Save the config to ~/.vimrc, if not exist create it.
"
" Windows
" Save the config to D:\Program Files\Vim\_vimrc.

if has('gui_running')
  " colo is short for "colorscheme"
  "
  " OS X
  " Save the *.vim color scheme file to ~/.vim/colors folder.
  "
  " Windows
  " Save the *.vim color scheme file to D:\Program Files\Vim\vimfiles\colors
  " folder.
  colo molokai

  " set font family and size
  " Windows
  set guifont=consolas:h9
  " OS X
  set guifont=Monaco:h12

  " show line number
  set number

  " size of a hard tabstop
  set tabstop=2

  " size of an "indent"
  set shiftwidth=2

  " a combination of spaces and tabs are used to simulate tab stops at a width
  " other than the (hard)tabstop
  set softtabstop=2

  " make "tab" insert indents instead of tabs at the beginning of a line
  set smarttab

  " always uses spaces instead of tab characters
  set expandtab

  set autoindent

  set smartindent

endif

